<form [formGroup]="form" (keydown.shift.enter)="onControlEnter($event)" (keydown.enter)="onControlEnter($event)" class="dialog-wrap popup">
    <!-- <audio #newDetailPipSound>
        <source src='assets/sounds/beep-08b.wav' type="audio/mp3">
    </audio>
    <audio #increaseDetailPipSound>
        <source src='assets/sounds/beep-07a.wav' type="audio/mp3">
    </audio>
    <audio #errorSound>
        <source src='assets/sounds/beep-03.wav' type="audio/mp3">
    </audio> -->
    <div formArrayName="array">
        <div *ngFor="let formItem of array.controls; let i = index">
            <nb-card [nbSpinner]="isProcessing" class="small-header popup">
                <nb-card-header>
                    <ngx-card-header [option]="{controlOption: {formIndex: i, form: formItem}}" [size]="size" [icon]="favicon" [title]="title ? title : ('Warehouse.InventoryAdjustNote.title' | translate:{definition: '', action: commonService.translate.instant(isEditMode ? 'Common.update' : 'Common.create')} | headtitlecase)" [controls]="actionButtonList"></ngx-card-header>
                </nb-card-header>
                <nb-card-body>
                    <div [formGroup]="formItem">
                        <label class="label label-with-border-below">{{'Common.contactInfo' | translate | headtitlecase}}</label>
                        <div class="row dashed-radius-border">
                            <div class="col-sm-12">
                                <nb-tabset>
                                    <nb-tab tabTitle="{{'Common.mainInfo' | translate | headtitlecase}} (*)">
                                        <!-- <label class="label label-with-border-below">{{'Common.mainInfo' | translate | headtitlecase}}</label> -->
                                        <div class="row">
                                            <input type="hidden" formControlName="Code">
                                            <div class="col-sm-3">
                                                <ngx-form-group [formGroup]="formItem" name="Object" label="Voucher.organizationOrPersornal" [array]="array" [index]="i" [allowCopy]="false" [required]="true" [customIcons]="objectControlIcons" [touchedValidate]="false">
                                                    <ngx-select2 formControlName="Object" [select2Option]="select2OptionForContact" (selectChange)="onObjectChange(formItem, $event, i)"></ngx-select2>
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-sm-6">
                                                <ngx-form-group [formGroup]="formItem" name="ObjectName" label="Common.name" [array]="array" [index]="i" [allowCopy]="false" [required]="true" [touchedValidate]="false">
                                                    <input type="text" nbInput fullWidth formControlName="ObjectName" placeholder="{{'Common.name' | translate | headtitlecase}}">
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-sm-3">
                                                <ngx-form-group [formGroup]="formItem" name="ObjectPhone" label="Common.phone" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                                    <input type="text" nbInput fullWidth formControlName="ObjectPhone" placeholder="{{formItem.get('ObjectPhone').placeholder || ('Common.phone' | translate | headtitlecase)}}">
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-sm-3">
                                                <ngx-form-group [formGroup]="formItem" name="ObjectIdentifiedNumber" label="Common.identifiedNumber" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                                    <input type="text" nbInput fullWidth formControlName="ObjectIdentifiedNumber" placeholder="{{'Common.identifiedNumber' | translate | headtitlecase}}">
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-sm-6">
                                                <ngx-form-group [formGroup]="formItem" name="ObjectAddress" label="Common.address" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                                    <input type="text" nbInput fullWidth formControlName="ObjectAddress" placeholder="{{formItem.get('ObjectAddress').placeholder || ('Common.address' | translate | headtitlecase)}}">
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-sm-3">
                                                <ngx-form-group [formGroup]="formItem" name="ObjectEmail" label="Common.email" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                                    <input type="text" nbInput fullWidth formControlName="ObjectEmail" placeholder="{{formItem.get('ObjectEmail').placeholder || ('Common.email' | translate | headtitlecase)}}">
                                                </ngx-form-group>
                                            </div>
                                        </div>
                                    </nb-tab>
                                </nb-tabset>
                            </div>
                        </div>

                        <label class="label label-with-border-below">{{'Common.receivedAndPayment' | translate | headtitlecase}}</label>
                        <div class="row dashed-radius-border">
                            <div class="col-sm-3">
                                <ngx-form-group [formGroup]="formItem" name="ObjectBankName" label="Bank.name" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                    <input type="text" nbInput fullWidth formControlName="ObjectBankName" placeholder="{{'Bank.name' | translate | headtitlecase}}">
                                </ngx-form-group>
                            </div>
                            <div class="col-sm-6">
                                <ngx-form-group [formGroup]="formItem" name="ObjectBankCode" label="Bank.code" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                    <input type="text" nbInput fullWidth formControlName="ObjectBankCode" placeholder="{{'Bank.code' | translate | headtitlecase}}">
                                </ngx-form-group>
                            </div>
                            <div class="col-sm-3">
                                <ngx-form-group [formGroup]="formItem" name="DateOfAdjusted" label="{{validateVoucherDate(formItem.get('DateOfAdjusted'), 'Warehouse.dateOfAdjusted')}}" [array]="array" [index]="i" [allowCopy]="false" [required]="true" [touchedValidate]="false">
                                    <input type="text" [owlDateTime]="DateOfReceipted" [owlDateTimeTrigger]="DateOfReceipted" nbInput fullWidth formControlName="DateOfAdjusted" placeholder="{{'Warehouse.dateOfAdjusted' | translate | headtitlecase}}">
                                    <owl-date-time #DateOfReceipted [startAt]="formItem.get('DateOfAdjusted')?.value || this.commonService.lastVoucherDate"></owl-date-time>
                                </ngx-form-group>
                            </div>
                            <div class="col-sm-9">
                                <ngx-form-group [formGroup]="formItem" name="ReceiptAddress" label="Sales.deliveryAddress" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                    <input type="text" nbInput fullWidth formControlName="ReceiptAddress" placeholder="{{'Sales.deliveryAddress' | translate | headtitlecase}}">
                                </ngx-form-group>
                            </div>
                            <div class="col-sm-3">
                                <ngx-form-group [formGroup]="formItem" name="RelativeVouchers" label="Common.relationVoucher" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                    <button class="fit-control-button" nbTooltip="Tạo phiếu cho nhiều người dùng kiểm kho" [outline]="true" nbButton status="primary" fullWidth (click)="createAlternateAdjustVoucher(formItem)" size="medium" hero>
                                        <nb-icon pack="eva" icon="plus-circle-outline"></nb-icon>Tạo phiếu phụ
                                    </button>
                                </ngx-form-group>
                            </div>

                            <div class="col-sm-12" *ngIf="formItem.get('RelativeVouchers').value?.length > 0">
                                <div class="form-group">
                                    <label class="label"><span class="valid">{{'Common.relativeVoucher' | translate | headtitlecase}}: </span></label>
                                    <div>
                                        <span class="tag" *ngFor="let relationVoucher of formItem.get('RelativeVouchers').value" nbTooltip="{{relationVoucher.type}}: {{relationVoucher | objectstext}}">
                                            <nb-icon pack="eva" icon="pricetags-outline" class="icon"></nb-icon><span class="label" (click)="openRelativeVoucher(relationVoucher)">{{relationVoucher | objectid}}</span>
                                            <nb-icon pack="eva" icon="close-outline" class="close-btn" (click)="removeRelativeVoucher(formItem, relationVoucher)"></nb-icon>
                                        </span>
                                    </div>
                                    <div class="break"></div>
                                </div>
                            </div>
                            <!-- <div class="col-sm-3">
                                <ngx-form-group [formGroup]="formItem" name="RelativeVouchers" label="Common.relationVoucher" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                    <button class="fit-control-button" [outline]="true" nbButton status="primary" fullWidth (click)="openRelativeVoucherChoosedDialog(formItem)" size="medium" hero>
                                        <nb-icon pack="eva" icon="plus-circle-outline"></nb-icon>Thêm chứng từ liên quan
                                    </button>
                                </ngx-form-group>
                            </div> -->

                            <div class="col-sm-9">
                                <ngx-form-group [formGroup]="formItem" name="Title" label="Common.title" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                    <input type="text" nbInput fullWidth formControlName="Title" placeholder="{{'Common.title' | translate | headtitlecase}}">
                                </ngx-form-group>
                            </div>
                            <div class="col-sm-3">
                                <ngx-form-group [formGroup]="formItem" name="Shelf" label="Kệ hàng hóa" [array]="array" [index]="i" [allowCopy]="false" [required]="false" [touchedValidate]="false">
                                    <ngx-select2 formControlName="Shelf" [select2Option]="select2OptionForShelf" [data]="shelfList"></ngx-select2>
                                </ngx-form-group>
                            </div>
                            <!-- <div class="col-sm-3">
                                <ngx-form-group [formGroup]="formItem" name="Employee" label="Common.employee" [array]="array" [index]="i" [allowCopy]="true" [required]="false">
                                    <ngx-select2 formControlName="Employee" [select2Option]="selectEmployeeOption"></ngx-select2>
                                </ngx-form-group>
                            </div> -->

                            <div class="col-sm-12">
                                <ngx-form-group [formGroup]="formItem" name="Note" label="Common.note" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                    <textarea class="scrollable-container" nbInput fullWidth formControlName="Note" placeholder="{{'Common.note' | translate | headtitlecase}}" rows="4"></textarea>
                                </ngx-form-group>
                            </div>
                            <div class="col-sm-12">
                                <ngx-form-group [formGroup]="formItem" name="SubNote" label="Common.subNote" [array]="array" [index]="i" [allowCopy]="false" [required]="false">
                                    <textarea class="scrollable-container" nbInput fullWidth formControlName="SubNote" placeholder="{{'Common.subNote' | translate | headtitlecase}}" rows="3"></textarea>
                                </ngx-form-group>
                            </div>
                        </div>

                        <!-- Detail form -->
                        <label class="label">{{'Voucher.productOrservice' | translate | headtitlecase}}</label>
                        <div class="row">
                            <div class="col-sm-2 label">
                                {{'Common.noNumber' | translate | headtitlecase}}/{{'Common.photo' | translate | headtitlecase}}</div>
                            <div class="col-sm-3 label">{{'Common.goodsOrService' | translate | headtitlecase}}</div>
                            <div class="col-sm-5 label">
                                <div class="row">
                                    <div class="col-sm-3 label">{{'Voucher.unit' | translate | headtitlecase}}</div>
                                    <div class="col-sm-7 label">{{'Warehouse.container' | translate | headtitlecase}}</div>
                                    <div class="col-sm-2 label align-right">{{'Voucher.quantity' | translate | headtitlecase}}</div>
                                </div>
                            </div>
                            <div class="col-sm-2 label">
                                <div class="row">
                                    <div class="col-sm-12 label align-right">{{'Warehouse.accessNumber' | translate | headtitlecase}}</div>
                                </div>
                            </div>
                        </div>

                        <div formArrayName="Details" class="form-details" [sortablejs]="getDetails(formItem)">
                            <div class="form-detail-item" *ngFor="let detail of getDetails(formItem).controls; let ic=index" [formGroup]="detail" [ngClass]="{'category': detail.value.Type == 'CATEGORY', 'active': ic == activeDetailIndex, 'import': detail['_type'] == 'IMPORT'}">
                                <hr>
                                <div class="row">
                                    <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                        <div class="row">
                                            <div class="col-md-3 col-sm-3 col-xs-3">
                                                <ngx-form-group [hideLabel]="true" *ngIf="detail.value.Type === 'PRODUCT'" [formGroup]="detail" name="No" label="Common.no" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="false" [required]="false">
                                                    <input nbInput class="sorting-handle" title="Kéo thả để di chuyển" fullWidth formControlName="No" readonly style="text-align: center; cursor: grab; width: 100%; height: 2.5rem; padding: 0;">
                                                    <input type="hidden" formControlName="SystemUuid">
                                                </ngx-form-group>
                                                <div class="form-group">
                                                    <label class="label">{{'Form.cm' | translate | headtitlecase}}</label>
                                                    <button nbButton status="{{detail.value.Type === 'PRODUCT' ? 'danger' : 'primary'}}" hero size="medium" (click)="removeDetailGroup(formItem, detail, ic)" style="width: 100%; margin-bottom: 3px; padding: 0">
                                                        <nb-icon pack="eva" icon="close-circle-outline"></nb-icon>
                                                    </button>
                                                </div>
                                            </div>

                                            <div class="col-md-9 col-sm-9 col-xs-9">
                                                <ngx-form-group [hideLabel]="true" *ngIf="detail.value.Type === 'PRODUCT'" [formGroup]="detail" name="Image" label="Common.image" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="false" [required]="false">
                                                    <ngx-files-input formControlName="Image" [config]="{style: {height: '5.5rem', padding: '0'}, thumbnailStype: {height: '5rem', width: '100%'}}"></ngx-files-input>
                                                </ngx-form-group>
                                                <div class="form-group" *ngIf="detail.value.Type === 'CATEGORY'">
                                                    <label class="label">Stt</label>
                                                    <input type="text" nbInput fullWidth placeholder="Kéo để di chuyển" disabled class="sorting-handle" style="cursor: pointer;">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-8 col-sm-12 col-xs-12">
                                        <div class="row">
                                            <div class="col-md-{{detail.value.Type === 'PRODUCT' ? '4' : '12'}} col-sm-12 col-xs-12">
                                                <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="Type" label="Common.type" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="false" [required]="false">
                                                    <ngx-select2 [data]="select2DataForType" formControlName="Type" (selectChange)="toMoney(formItem, detail)" [select2Option]="select2OptionForType"></ngx-select2>
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-md-8 col-sm-12 col-xs-12" *ngIf="detail.value.Type === 'PRODUCT'">
                                                <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="Product" label="Voucher.productOrService" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="false" [required]="false" [customIcons]="getCustomIconsForProduct(i + ic)">
                                                    <ngx-select2 formControlName="Product" [select2Option]="select2OptionForProduct" (selectChange)="onSelectProduct(detail, $event)"></ngx-select2>
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-md-12 col-sm-12 col-xs-12" *ngIf="detail.value.Type === 'PRODUCT'">
                                                <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="Business" label="Common.type" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="true" [required]="false">
                                                    <ngx-select2 [data]="accountingBusinessList" formControlName="Business" [select2Option]="select2OptionForAccountingBusiness"></ngx-select2>
                                                </ngx-form-group>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12">
                                        <div class="row">
                                            <div class="col-md-3 col-sm-4 col-xs-4" *ngIf="detail.value.Type !== 'CATEGORY'">
                                                <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="Unit" label="Voucher.unit" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="true" [required]="true" [touchedValidate]="false" [touchedValidate]="false" [customIcons]="unitCustomIcons">
                                                    <ngx-select2 formControlName="Unit" [data]="detail['unitList']" [select2Option]="select2OptionForUnit" (selectChange)="onSelectUnit(detail, $event)"></ngx-select2>
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-md-7 col-sm-4 col-xs-4" *ngIf="detail.value.Type === 'PRODUCT'">
                                                <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="Container" label="Warehouse.container" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="true" [required]="true" [touchedValidate]="false" [customIcons]="getCustomIconsForContainer(i + ic)" [option]="{parentForm: formItem}">
                                                    <ngx-select2 [data]="detail['ContainerList'] || warehouseContainerList" formControlName="Container" [select2Option]="select2OptionForContainer" (selectChange)="onSelectContainer(detail, $event, false, formItem)"></ngx-select2>
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-md-2 col-sm-4 col-xs-4" *ngIf="detail.value.Type === 'PRODUCT'">
                                                <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="Quantity" label="Voucher.quantity" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="false" [required]="false">
                                                    <input type="text" nbInput fullWidth formControlName="Quantity" placeholder="{{'Voucher.quantity' | translate | headtitlecase}}" class="align-right" (keyup)="toMoney(formItem, detail)" [inputMask]="towDigitsInputMask">
                                                </ngx-form-group>
                                            </div>
                                            <div class="col-md-12">
                                                <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="Description" label="Common.description" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="false" [required]="false">
                                                    <textarea class="scrollable-container" nbInput fullWidth formControlName="Description" placeholder="{{'Common.description' | translate | headtitlecase}}" rows="1"></textarea>
                                                </ngx-form-group>
                                            </div>
                                            <!-- <div class="col-md-9 col-sm-8 col-xs-8" *ngIf="detail.value.Type == 'PRODUCT' && detail['IsManageByAccessNumber']">
                                                <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="AccessNumbers" label="Common.type" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="false" [required]="false">
                                                    <ngx-select2 formControlName="AccessNumbers" [select2Option]="select2OptionForAccessNumbers" [data]="detail['AccessNumberList']" #accessNumbers (selectChange)="onSelectAccessNumbers(detail, $event, false, accessNumbers)"></ngx-select2>
                                                </ngx-form-group>
                                            </div> -->
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12" *ngIf="detail.value.Type !== 'CATEGORY'">
                                        <ngx-form-group [hideLabel]="true" [formGroup]="detail" name="AccessNumbers" label="Common.type" [array]="getDetails(formItem)" [index]="ic" [allowCopy]="false" [required]="false">
                                            <!-- <textarea class="scrollable-container" nbInput fullWidth formControlName="AccessNumbers" [placeholder]="detail.value.Type == 'PRODUCT' && detail['IsManageByAccessNumber'] ? 'Số truy xuất: \n127xxx\n127xxx' : 'Hàng hóa không quản lý theo số truy xuất'" style="height: 88px" #accessNumbers (change)="onSelectAccessNumbers(detail, $event, true, accessNumbers)" (keyup)="onSelectAccessNumbers(detail, $event, false, accessNumbers)"></textarea> -->
                                            <select class="scrollable-container status-basic input-full-width shape-rectangle" nbInput formControlName="AccessNumbers" name="AccessNumbers" style="height: 88px" multiple placeholder="Số truy xuất" disabled>
                                                <option *ngFor="let item of detail.get('AccessNumbers').value" [value]="item" selected>{{item}}</option>
                                            </select>
                                        </ngx-form-group>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-lg-7 col-md-12 col-sm-12 col-xs-12">
                                    <div class="buttons-row">
                                        <button nbButton status="success" (click)="addDetailFormGroup(formItem)" size="medium" hero [disabled]="isProcessing">
                                            <nb-icon pack="eva" icon="plus-circle-outline"></nb-icon>{{'Thêm dòng mới' | translate | headtitlecase}}
                                        </button>
                                        <button nbButton status="primary" (click)="addGoodsOfShelf(formItem)" size="medium" hero [disabled]="isProcessing">
                                            <nb-icon pack="eva" icon="plus-circle-outline"></nb-icon>{{'Thêm thàng hóa theo kệ' | translate | headtitlecase}}
                                        </button>
                                        <button nbButton status="info" (click)="syncWithSubVoucher(formItem)" size="medium" hero [disabled]="isProcessing || (formItem.get('RelativeVouchers').value || []).length == 0">
                                            <nb-icon pack="eva" icon="plus-circle-outline"></nb-icon>{{'Đồng bộ phiếu phụ' | translate | headtitlecase}}
                                        </button>
                                        <button nbButton status="danger" (click)="barcodeScan(formItem)" size="medium" hero [disabled]="isProcessing">
                                            <nb-icon pack="eva" icon="plus-circle-outline"></nb-icon>{{'BarCode scan' | translate | headtitlecase}}
                                        </button>
                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12">
                                    <div class="row">
                                        <div class="col-md-2 col-sm-4 col-xs-4"></div>
                                        <div class="col-md-2 col-sm-4 col-xs-4"></div>
                                        <div class="col-md-2 col-sm-4 col-xs-4"></div>
                                        <div class="col-md-3 col-sm-4 col-xs-4" style="text-align: right; font-weight: bold;">{{'Voucher.total' | translate | headtitlecase}}</div>
                                        <div class="col-md-3 col-sm-8 col-xs-8" style="text-align: right; font-weight: bold; padding-right: 1.7rem;">{{formItem.get('_total').value | currency:'VND'}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12" style="text-align: right;">

                            </div>
                        </div>
                        <!-- End Detail form -->

                    </div>
                </nb-card-body>
                <nb-card-footer>
                    <div class="buttons-row" style="text-align: right;">
                        <button nbButton hero status="primary" (click)="preview(formItem)" [disabled]="!form.valid || isProcessing">
                            <nb-icon on b-icon pack="eva" icon="printer"></nb-icon>{{'Common.print' | translate | headtitlecase}}
                        </button>
                        <button nbButton status="danger" [disabled]="!form.valid || isProcessing" style="float: right;" hero (click)="saveAndClose()">{{'Common.saveAndClose' | translate | headtitlecase}}</button>
                        <button nbButton status="success" [disabled]="!form.valid || isProcessing" style="float: right;" hero (click)="save()" [nbSpinner]="isProcessing">{{'Common.save' | translate | headtitlecase}}</button>
                    </div>
                </nb-card-footer>
            </nb-card>
        </div>
    </div>
</form>